<% if notice %>
  <p id="notice"><%= notice %></p>
<% end  %>

<h1>Product Catalog</h1>

<% @products.each do |product| %>
  <div class="entry">
    <h2> <%= product.title %> </h2>

    <%= image_tag(product.image) %>

    <p> <%= sanitize(product.description) %> </p> <%# sanitize allows us to safely add HTML stylings to make the descriptions more interesting for our customers. %>

    <div class="price_line">
      <span class="price"> <%= number_to_currency(product.price) %> </span>
      <%= button_to 'Buy', line_items_path(:product_id => product) %>
    </div>
  </div>
<% end  %>

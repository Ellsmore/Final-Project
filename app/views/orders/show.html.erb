<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

<% @cart.line_items.each do |item| %>
  <li class="clearfix">
    <span> <%= item.product.title %> </span>
    <span class="item-price"> <%= number_to_currency(item.total_price) %> </span>
    <span class="item-quantity"> &times; <%= item.quantity %> </span>
  </li>
<% end %>
  <li><span class="lighter-text">Total:</span>
  <span class="main-color-text"> <%= number_to_currency(@cart.total_price) %> </span></li>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>

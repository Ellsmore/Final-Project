<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address, :rows => 3, :cols => 40 %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :payment_type %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, :prompt => 'Select a payment method'%>
  </div>

  <form action="" method="POST">
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="pk_test_o8REPwaMO0M3AdceQgmcbPLy"
    data-amount=  '<%= @cart.total_price * 100 %>'
    data-name="Ellsmore"
    data-description="Stay deadly and grab some meat"
    data-image="https://d3ui957tjb5bqd.cloudfront.net/images/screenshots/products/39/396/396567/flat_vector_shop-01-f.jpg?1426020217"
    data-locale="auto"
    data-zip-code="true">
  </script>
</form>

  <div class="actions">
    <%= f.submit 'Place Order'%>
  </div>
<% end %>
